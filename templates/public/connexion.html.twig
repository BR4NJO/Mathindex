{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="contact">
        <h1 class="title">
            <span>Contactez</span>-nous
        </h1>

        <div class="contact_call">

            <iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83398.665612746!2d2.508770729374523!3d49.2155765939861!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e630d1f96229df%3A0xabf21a12bca8e35f!2sLe%20Comptoir%20Senlisien!5e0!3m2!1sfr!2sfr!4v1700439940945!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

            {# Intégration du formulaire Symfony #}
            {{ form_start(form, {'attr': {'class': 'your-form-class'}}) }}

            <h2>Vos <span>informations</span></h2>
            <div class="messageBox">
                {{ form_row(form.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
            </div>

            <div class="messageBox">
                {{ form_row(form.prenom, {'attr': {'placeholder': 'Votre prénom'}}) }}
            </div>

            <div class="messageBox">
                {{ form_row(form.mail, {'attr': {'placeholder': 'Votre email'}}) }}
            </div>

            <div class="messageBox">
                {{ form_row(form.telephone, {'attr': {'placeholder': 'Votre téléphone'}}) }}
            </div>

            <div class="messageBox">
                {{ form_row(form.message, {'attr': {'placeholder': 'Votre message'}}) }}
            </div>

            <input type="submit" value="Envoyer votre message" class="btn_contact">
            {{ form_end(form) }}

        </div>

    </section>
{% endblock %}
