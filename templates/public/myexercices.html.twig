                        <td>{{exercise.name}}</td>
                        <td>{{exercise.difficulty}}</td>
                        <td>{{ exercise.keywords|replace({';': ' '}) }}</td>
                        <td class="exercisefile">
                            <a href={{ exercise.getExerciseFile().getName() }}.{{ exercise.getExerciseFile.getExtension() }}>
