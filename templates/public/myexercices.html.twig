{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset("css/components/Table.css")}}">
{% endblock %}

{% block body %}
    <h1>Mes exercices</h1>
    <div class="content">
        <div class="all-exercice-table">
            <h2>Vous pouvez modifier ou supprimer l'un de vos exercices.</h2>
            <table>
                <thead>
                    <td>Nom</td>
                    <td>Matiére</td>
                    <td>Thématique</td>
                    <td>Fichiers</td>
                    <td>Actions</td>
                </thead>
                <tbody>
                    {% for exercise in exercices %}
